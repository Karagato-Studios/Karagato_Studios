	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>fields</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>scripts</folder>
		<folder>language</folder>
	</files>
	<positions>
		<position>banner</position>
		<position>debug</position>
		<position>main-menu</position>
		<position>slideshow</position>
		<position>section-quote</position>
		<position>section-project</position>
		<position>section-about</position>
		<position>section-banner</position>
		<position>section-top</position>
		<position>left</position>
		<position>right</position>
		<position>position-9</position>
		<position>section-bars</position>
		<position>section-white</position>
		<position>section-numbers</position>
		<position>position-13</position>
		<position>position-14</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_jf_thehub.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_jf_thehub.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced" addfieldpath="/templates/jf_thehub/fields/">
				<field name="logoOption" type="list" default=""
					label="TPL_JF_THEHUB_LOGO_OPTION_LABEL"
					description="TPL_JF_THEHUB_LOGO_OPTION_DESC">
						<option value="1">TPL_JF_THEHUB_LOGO_AS_IMAGE</option>
  						<option value="2">TPL_JF_THEHUB_LOGO_AS_TEXT</option>
				</field>
				
				<field name="logoFile" class="" type="media" default=""
					label="TPL_JF_THEHUB_LOGO_LABEL"
					description="TPL_JF_THEHUB_LOGO_DESC" />
					
				<field name="logoText" type="text" default="TALOS"
					label="TPL_JF_THEHUB_LOGO_TEXT_LABEL"
					description="TPL_JF_THEHUB_LOGO_TEXT_DESC"
					filter="string" />
					
				<field name="backgroundColor" type="list" default=""
					label="TPL_JF_THEHUB_COLOR_LABEL"
					description="TPL_JF_THEHUB_COLOR_DESC">
						<option value="light">TPL_JF_THEHUB_LIGHT</option>
  						<option value="dark">TPL_JF_THEHUB_DARK</option>
				</field>
					
				<field name="googleFont" type="list" default="" label="TPL_JF_THEHUB_FONT_LABEL" description="TPL_JF_THEHUB_FONT_DESC">
					<option value="">-- Use default --</option>
					<option value="OpenSans">Open Sans</option>
					<option value="Lato">Lato</option>
					<option value="PTSans">PT Sans</option>
					<option value="SourceSansPro">Source Sans Pro</option>
					<option value="Exo2">Exo 2</option>
					<option value="Ubuntu">Ubuntu</option>
					<option value="IstokWeb">Istok Web</option>
					<option value="Nobile">Nobile</option>
				</field>

				<field name="templateColor" class="" type="color" default="#00aeef"
					label="TPL_JF_THEHUB_LINK_BUTTON_COLOR_LABEL"
					description="TPL_JF_THEHUB_LINK_BUTTON_COLOR_DESC" />
					
				<field type="spacer" name="myspacer1" hr="true" />
					
				<field name="social" 
					type="radio" 
					class="btn-group btn-group-yesno"
					default="1"
					label="Show Social Button"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="twitterIcon" 
					type="radio" 
					class="btn-group btn-group-yesno"
					default="1"
					label="Show Twitter Icon"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="twitterLink" type="text" default=""
					label="Twitter Link"
					description="Please add your twitter link here"
					filter="string" />
				
				<field name="facebookIcon" type="radio" class="btn-group btn-group-yesno" default="1"
					label="Show Facebook Icon"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="facebookLink" type="text" default=""
					label="Facebook Link"
					description="Please add your facebook link here"
					filter="string" />
					
				<field name="pinterestIcon" type="radio" class="btn-group btn-group-yesno" default="1"
					label="Show Pinterest Icon"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="pinterestLink" type="text" default=""
					label="Pinterest Link"
					description="Please add Pinterest link here"
					filter="string" />
				
				<field name="instagramIcon" type="radio" class="btn-group btn-group-yesno" default="1"
					label="Show Instagram Icon"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="instagramLink" type="text" default=""
					label="Instagram Link"
					description="Please add your instagram link here"
					filter="string" />
					
				<field name="dribbbleIcon" type="radio" class="btn-group btn-group-yesno" default="1"
					label="Show Dribbble Icon"
					description="Select an option">
						<option value="1">JYES</option>
						<option value="0">JNO</option>
				</field>
				
				<field name="dribbbleLink" type="text" default=""
					label="Dribbble Link"
					description="Please add your Dribbble link here"
					filter="string" />
				
				<field type="spacer" name="myspacer2" hr="true" />
				
				<field name="copyright" type="textarea" default="Copyright 2016" 
					label="Copyright" 
					description="" cols="40" rows="4" filter="raw"/>
					
				<field type="spacer" name="myspacer3" hr="true" />
				
				<field name="map" type="radio" default="1"
					label="Use map in contact"
					description="Select an option">
						<option value="0">No</option>
  						<option value="1">Yes</option>
				</field>
					
				<field name="latitude" type="text" default="40.790278"
					label="Latitude"
					description="Latitude"
					filter="string" />
					
				<field name="longitude" type="text" default="-73.959722"
					label="Longitude"
					description="Longitude"
					filter="string" />
					
				<field name="longlat" type="map" label="Google Map" description="" ></field>

			</fieldset>
		</fields>
	</config>
</extension>
